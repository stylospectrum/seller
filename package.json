{
  "name": "seller-app",
  "version": "0.0.1",
  "scripts": {
    "dev": "next dev -p $(grep PORT .env | cut -d '=' -f2)",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install",
    "lint": "npm run tsc && npm run lint:script && npm run lint:style",
    "lint-fix": "npm run lint-fix:script && npm run lint-fix:style",
    "lint-fix:script": "next lint --fix",
    "lint-fix:style": "npm run lint:style -- --fix",
    "lint:script": "next lint",
    "lint:style": "stylelint 'src/**/*.scss'",
    "tsc": "tsc --noEmit"
  },
  "lint-staged": {
    "*.scss": "stylelint --fix",
    "*": "prettier -c --write",
    "*.{.js,.jsx,.ts,.tsx}": "next lint --fix"
  },
  "dependencies": {
    "@lit/task": "^1.0.0",
    "@stylospectrum/ui": "^0.0.52",
    "axios": "^1.6.2",
    "classnames": "^2.5.1",
    "d3": "^7.8.5",
    "d3-flextree": "^2.1.2",
    "immutability-helper": "^3.1.1",
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.7.4",
    "uuid": "^9.0.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@types/d3": "^7.4.3",
    "@types/d3-flextree": "^2.1.4",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^9.0.7",
    "eslint": "^8",
    "eslint-config-next": "^14.0.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "sass": "^1.69.4",
    "stylelint": "^15.10.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-prettier": "^4.0.0",
    "typescript": "^5"
  }
}
